<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- local connection properties -->
		<property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>

		<!-- local connection properties -->
		<property name="connection.driver_class"> org.postgresql.Driver</property>
		<property name="connection.url"> jdbc:postgresql://127.0.0.1:5432/messagesystem</property>
		<property name="connection.username">		postgres</property>
		<property name="connection.password">		secret</property>	
		<property name="connection.autoReconnect">	true</property>
		<property name="connection.autoReconnectForPools">	true</property>
<!-- 		<property name="connection.zeroDateTimeBehavior">convertToNull</property> -->
    
		<!-- c3p0 connection pool properties -->
		<property name="hibernate.c3p0.max_size">1000</property>
		<property name="hibernate.c3p0.min_size">10</property>
		<property name="hibernate.c3p0.acquire_increment">1</property> 
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">200</property>
		<property name="hibernate.c3p0.maxStatementsPerConnection">5</property>
		<property name="hibernate.c3p0.idle_test_period">3600</property>
		<property name="hibernate.c3p0.testConnectionOnCheckout">true</property>
		<property name="hibernate.c3p0.preferredTestQuery">SELECT 1</property>
		
		<property name="hibernate.connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>	

		<!-- dialect for PostgreSQL -->
		<property name="generate_statistics">false</property>
		<property name="dialect">
			org.hibernate.dialect.PostgreSQLDialect
		</property>

		<property name="show_sql">false</property>

		<property name="bytecode.use_reflection_optimizer">true</property>

		<property name="cache.provider_class">
			<!-- org.hibernate.cache.NoCacheProvider -->
			<!-- net.sf.ehcache.hibernate.SingletonEhCacheProvider -->
			org.hibernate.cache.EhCacheProvider
		</property>

		<property name="cache.use_query_cache">false</property>
		<property name="cache.use_structured_entries">false</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="message.system.model.MessageRecipients" />
		<mapping class="message.system.model.Messages" />
		<mapping class="user.management.model.Addresses" />
		<mapping class="user.management.model.Contactmethods" />
		<mapping class="user.management.model.Countries" />
		<mapping class="user.management.model.Federalstates" />
		<mapping class="user.management.model.Permissions" />
		<mapping class="user.management.model.Roles" />
		<mapping class="user.management.model.UserData" />
		<mapping class="user.management.model.Users" />
		<mapping class="user.management.model.Zipcodes" />
		<mapping class="resource.system.model.Resources" />

	</session-factory>

</hibernate-configuration>